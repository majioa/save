LOAD_FILE	PROC	NEAR
	PUSH	AX
	PUSH	DI
	MOV	AH,3DH
	XOR	AL,AL
	PUSH	CX
	PUSH	DX
	XCHG	SI,DX
	INT	21H
	JC	LOAD_ERROR
	MOV	BX,AX
	POP	DX
	POP	CX
	PUSH	BX
	MOV	AH,3FH
	cli
	INT	21H
	sti
	JC	LOAD_ERROR
	MOV	CS:[LEN_FILE_],AX
	POP	BX
	MOV	AH,3EH
	INT	21H
	JC	LOAD_ERROR
	POP	DI
	POP	AX
	MOV	CX,CS:[LEN_FILE_]
	RET
LOAD_ERROR:
	INT	20H
LEN_FILE_	DW	0
ENDP

